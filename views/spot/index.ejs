<% layout('layouts/boilerplate.ejs') %>

<h1>All Tourist Spots</h1>
<% for(let i of temp){ %>
	<div class="card m-3">
		<div class="row">
			<div class="col-md-4">
				<img src="<%=i.image%>" class="img-fluid">
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h5 class="card-title"><%=i.title%></h5>
					<p class="text"><%=i.description%></p>
					<p class="card-text"><small class="text-muted"><%=i.location%></small></p>
					<a href="/spot/<%=i.id%>" class="btn btn-primary">Details &gt;&gt;&gt;</a>
				</div>
			</div>
		</div>
	</div>
<% } %>

